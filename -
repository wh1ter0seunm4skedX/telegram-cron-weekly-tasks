name: Hourly Cron

on:
  schedule:
    - cron: '* * * * *'
  workflow_dispatch: {}

jobs:
  ping:
    runs-on: ubuntu-latest
    steps:
      - name: Call Vercel cron endpoint
        env:
          CRON_URL: ${{ secrets.CRON_URL }}
          CRON_SECRET: ${{ secrets.CRON_SECRET }}
        run: |
          if [ -z "$CRON_URL" ]; then echo "Missing CRON_URL secret"; exit 1; fi
          curl -fsS "$CRON_URL?key=$CRON_SECRET" -X GET --max-time 20


